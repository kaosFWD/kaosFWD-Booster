<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="kaosFWD Booster" Height="500" Width="750" Background="#1E1E1E" Foreground="White" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="kaosFWD Booster" FontSize="26" FontWeight="Bold" Foreground="#00FFAA" Margin="0,0,0,10" Grid.Row="0"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20" Grid.Row="1">
            <Button x:Name="BoostBtn" Content="ðŸš€ Boost" Width="120" Height="40" Background="#00FFAA" Foreground="Black" FontWeight="Bold" Margin="5"/>
            <Button x:Name="RestoreBtn" Content="ðŸ’» Ripristina" Width="120" Height="40" Background="#FF5555" Foreground="White" FontWeight="Bold" Margin="5"/>
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Lista esclusioni -->
            <StackPanel Grid.Column="0" Margin="5">
                <TextBlock Text="Esclusioni" FontSize="16" FontWeight="Bold" Foreground="#00FFAA"/>
                <ListBox x:Name="ExclusionList" Background="#2D2D2D" Foreground="White" Height="250" Margin="0,5,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="AddBtn" Content="âž• Aggiungi" Width="90" Margin="2"/>
                    <Button x:Name="RemoveBtn" Content="âž– Rimuovi" Width="90" Margin="2"/>
                </StackPanel>
            </StackPanel>

            <!-- Log -->
            <StackPanel Grid.Column="1" Margin="5">
                <TextBlock Text="Log" FontSize="16" FontWeight="Bold" Foreground="#00FFAA"/>
                <TextBox x:Name="LogBox" Background="#2D2D2D" Foreground="White" Height="300" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
