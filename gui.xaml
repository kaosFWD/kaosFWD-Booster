<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="kaosFWD Booster" Height="550" Width="850" 
        Background="#0F0F0F" Foreground="White" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize" MinHeight="500" MinWidth="750">
    
    <Window.Resources>
        <!-- Stile per i pulsanti principali -->
        <Style x:Key="MainButton" TargetType="Button">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stile per i pulsanti piccoli -->
        <Style x:Key="SmallButton" TargetType="Button" BasedOn="{StaticResource MainButton}">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="Height" Value="30"/>
        </Style>

        <!-- Gradiente per il titolo -->
        <LinearGradientBrush x:Key="TitleGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#00FFAA" Offset="0"/>
            <GradientStop Color="#00CCFF" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>

    <Border Background="#0F0F0F" CornerRadius="12" Margin="8">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER CON TITOLO -->
            <Border Grid.Row="0" 
                    Background="#1A1A1A" 
                    CornerRadius="10" 
                    Padding="25,18" 
                    Margin="0,0,0,25">
                <StackPanel>
                    <TextBlock Text="kaosFWD Booster" 
                               FontSize="34" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource TitleGradient}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Ottimizza le prestazioni di gaming chiudendo processi non necessari" 
                               FontSize="15" 
                               Foreground="#BBBBBB" 
                               HorizontalAlignment="Center" 
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- PULSANTI PRINCIPALI BOOST E RIPRISTINA -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,25" 
                        Grid.Row="1">
                <Button x:Name="BoostBtn" 
                        Content="ðŸš€ BOOST GAMING" 
                        Width="170" 
                        Height="55" 
                        Background="#00FFAA"
                        Foreground="Black"
                        BorderBrush="#00DD88"
                        Style="{StaticResource MainButton}"
                        Padding="15,10"
                        Margin="12"/>
                <Button x:Name="RestoreBtn" 
                        Content="ðŸ’» RIPRISTINA TUTTO" 
                        Width="170" 
                        Height="55" 
                        Background="#FF6B6B"
                        Foreground="White"
                        BorderBrush="#FF5555"
                        Style="{StaticResource MainButton}"
                        Padding="15,10"
                        Margin="12"/>
            </StackPanel>

            <!-- CONTENUTO PRINCIPALE -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- PANNELLO SINISTRA: ESCLUSIONI -->
                <Border Grid.Column="0" 
                        Background="#1A1A1A" 
                        CornerRadius="12" 
                        Padding="20" 
                        Margin="0,0,15,0">
                    <StackPanel>
                        <!-- TITOLO SEZIONE ESCLUSIONI -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="ðŸ›¡ï¸" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="PROCESSI PROTETTI" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="#00FFAA" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- DESCRIZIONE -->
                        <TextBlock Text="Questi processi non verranno mai chiusi durante il boost:" 
                                   FontSize="12" 
                                   Foreground="#CCCCCC" 
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,15"/>
                        
                        <!-- LISTA ESCLUSIONI -->
                        <ListBox x:Name="ExclusionList" 
                                 Background="#2D2D2D" 
                                 Foreground="White" 
                                 BorderBrush="#444444"
                                 BorderThickness="1"
                                 Height="220" 
                                 Margin="0,0,0,15"
                                 Padding="8"
                                 FontSize="13"
                                 FontFamily="Consolas"/>
                        
                        <!-- PULSANTI AGGIUNGI E RIMUOVI -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button x:Name="AddBtn" 
                                    Content="âž• Aggiungi" 
                                    Background="#4CAF50"
                                    Foreground="White"
                                    BorderBrush="#45A049"
                                    Style="{StaticResource SmallButton}"
                                    Margin="5,0"/>
                            <Button x:Name="RemoveBtn" 
                                    Content="âž– Rimuovi" 
                                    Background="#F44336"
                                    Foreground="White"
                                    BorderBrush="#DA190B"
                                    Style="{StaticResource SmallButton}"
                                    Margin="5,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- PANNELLO DESTRA: LOG -->
                <Border Grid.Column="1" 
                        Background="#1A1A1A" 
                        CornerRadius="12" 
                        Padding="20" 
                        Margin="15,0,0,0">
                    <StackPanel>
                        <!-- TITOLO SEZIONE LOG -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="ðŸ“‹" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="LOG ATTIVITÃ€" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="#00FFAA"
                                       VerticalAlignment="Center"/>
                            <!-- Badge LIVE -->
                            <Border Background="#FF4444" 
                                    CornerRadius="12" 
                                    Padding="8,3" 
                                    Margin="12,0,0,0"
                                    VerticalAlignment="Center">
                                <TextBlock Text="LIVE" 
                                           FontSize="10" 
                                           FontWeight="Bold" 
                                           Foreground="White"/>
                            </Border>
                        </StackPanel>
                        
                        <!-- AREA LOG -->
                        <Border Background="#0F0F0F" 
                                CornerRadius="8" 
                                BorderBrush="#333333" 
                                BorderThickness="1">
                            <TextBox x:Name="LogBox" 
                                     Background="Transparent"
                                     Foreground="#E0E0E0"
                                     BorderThickness="0"
                                     Height="260" 
                                     IsReadOnly="True" 
                                     AcceptsReturn="True" 
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Auto"
                                     FontFamily="Consolas, 'Courier New', monospace"
                                     FontSize="12"
                                     Padding="12"/>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- FOOTER INFORMATIVO -->
            <Border Grid.Row="3" 
                    Background="#1A1A1A" 
                    CornerRadius="10" 
                    Padding="18,12" 
                    Margin="0,25,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="âš ï¸" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Usa sempre 'RIPRISTINA TUTTO' per riaprire le applicazioni chiuse automaticamente" 
                               FontSize="13" 
                               Foreground="#FFB366" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>